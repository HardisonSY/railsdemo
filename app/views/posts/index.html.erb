<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Publish date</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.try(:title) %></td>
        <td><%= post.try(:content) %></td>
        <td><%= post.try(:publish_date) %></td>
        <td><%= post.user.try(:name) %></td>
        <td><%= link_to 'Show', post %></td>
        <% if can? :edit, post %>
          <td><%= link_to 'Edit', edit_post_path(post) %></td>
          <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= paginate @posts, :theme => 'twitter-bootstrap-3',
                     :pagination_class => 'pagination-centered' %>
<% if current_user%>
  <span>Hi, <%= current_user.email %></span>
  <%= link_to '新增文章', new_post_path %>
  <%= link_to '登出',     destroy_user_session_path, method: :delete %>
<% else %>
  <%= link_to '登入',     new_user_session_path %>
  <%= link_to '註冊',     new_user_registration_path %>
<% end %>
