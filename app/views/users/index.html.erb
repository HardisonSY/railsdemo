<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<%= link_to 'New User', new_user_path, class: 'btn btn-success' %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>文章數</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.try(:name) %></td>
        <td><%= user.try(:email) %></td>
        <td><%= user.posts.count %></td>
        <td>
          <%= link_to 'Show', user, class: 'btn btn-primary' %>&nbsp;
          <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-warning' %>&nbsp;
          <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
